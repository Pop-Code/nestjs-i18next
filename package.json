{
    "name": "nestjs-i18next",
    "version": "0.0.6",
    "description": "The nestjs translator modulde",
    "author": "Alex Hermann <alex.hermann@pop-code.com>",
    "repository": "https://github.com/Pop-Code/nestjs-i18next.git",
    "main": "dist/index.js",
    "license": "MIT",
    "scripts": {
        "build": "rm -Rf ./dist && tsc -b",
        "doc": "rm -Rf ./docs && typedoc ./src && touch ./docs/.nojekyll",
        "test": "jest",
        "test:build": "jest --testRegex .spec.js",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
        "lint": "eslint ./src/**/*.ts",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
    },
    "peerDependencies": {
        "@nestjs/common": "^6 || ^7"
    },
    "dependencies": {
        "i18next": "19.8.3"
    },
    "devDependencies": {
        "@nestjs/common": "7.4.4",
        "@nestjs/core": "7.4.4",
        "@nestjs/testing": "7.4.4",
        "@types/jest": "26.0.15",
        "codecov": "3.8.0",
        "jest": "26.6.1",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.6.3",
        "ts-jest": "26.4.3",
        "ts-node": "9.0.0",
        "tsconfig-paths": "3.9.0",
        "typedoc": "0.19.2",
        "typescript": "4.0.5",
        "@typescript-eslint/eslint-plugin": "4.15.1",
        "@typescript-eslint/parser": "4.6.0",
        "prettier": "2.1.2",
        "eslint": "7.12.1",
        "eslint-config-prettier": "6.15.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prefer-arrow": "1.2.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts}",
            "!src/index.ts",
            "!**/test/**"
        ],
        "coverageDirectory": "./coverage"
    },
    "engines": {
        "node": ">=0.10"
    }
}
