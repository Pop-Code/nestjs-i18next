{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "removeComments": true,
        "esModuleInterop": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": ["es7", "DOM"],
        "resolveJsonModule": true,
        "strictNullChecks": true
    }
}
